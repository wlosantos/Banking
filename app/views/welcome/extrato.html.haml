#transacoes
  %h2.title.is-6
    Extrato
  .form_extrato_periodo.mt-0.mb-4
    = form_with(url: extrato_path, local: true, method: :get) do |f|
      .columns
        .column
          %small In√≠cio
          .field
            .control
              = f.date_field :date_start, value: @inicio.to_date
        .column
          %small final
          .field
            .control
              = f.date_field :date_end, value: (@fim - 1).to_date
        .column
          .field
            = f.submit 'Consultar', class: 'button is-small is-dark'
  #extrato_table
    = render 'orders/extrato_periodo', conta: current_account
