.devise_form
  %h2 Entrar
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class: 'label'
      .control
        = f.email_field :email, class: 'input', autofocus: true, autocomplete: "email"
    .field
      = f.label :password, class: 'label'
      .control
      = f.password_field :password, class: 'input', autocomplete: "current-password"
    - if devise_mapping.rememberable?
      -# .field
      -#   = f.check_box :remember_me
      -#   = f.label :remember_me, class: 'label'
    .field.mb-3
      .control
        = f.submit "Entrar", class: 'button is-info is-fullwidth'
  %div.has-text-centered.mt-3
    = link_to 'Novo Usu√°rio', new_account_registration_path, class: 'is-link'
