= form_with(model: @order, local: true) do |form|
  = form.hidden_field :type_order, value: tipo
  .field
  = form.label 'Valor', class: 'label'
  .columns
    .column
      .field
        .control
          = form.number_field :value, class: 'input', step: :any, maxlength: 7, wrapper: false
          %span
            %small ex: 500.00 / 1000.00
    .column
      .field
        = form.submit 'Enviar', class: 'button is-info'
